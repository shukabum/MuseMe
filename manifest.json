{
  "manifest_version": 3,
  "name": "Mood-Based Playlist Generator",
  "version": "1.0",
  "permissions": ["history", "tabs", "storage"],
  "host_permissions": [
    "https://api.spotify.com/*",
    "https://open.spotify.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/logo.png",
    "128": "icons/logo1.png",
    "32": "icons/logo3.png",
    "48": "icons/logo4.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
